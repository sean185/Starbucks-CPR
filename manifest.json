{
	"manifest_version" : 2,
	"author" : "Sean",
	"name" : "Starbucks CPR",
	"description" : "Starbucks Chrome Page Reopener",
	"version" : "0.0.2",
	"icons" : {
		"16" : "icon16.png",
		"19" : "icon19.png",
		"48" : "icon48.png",
		"128" : "icon128.png"
	},
	"permissions" : [
		"tabs", "http://*/*", "https://*/*"
	],
	"browser_action" : {
		"default_icon" : "icon16.png",
		"default_title" : "Starbucks CPR",
		"default_popup" : "popup.html"
	},
	"background" : {
		"scripts" : ["background.js"],
		"persistent" : true
	}
}
